<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="1dp"
   >

    <RelativeLayout
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/placeholder_img"
            />

        <TextView
            android:id="@+id/offerUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SBH"
            android:layout_toRightOf="@+id/civ"
            android:layout_toEndOf="@+id/civ"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/deselect_tabtext"
            android:fontFamily="@font/montserrat_semibold"
            />

        <TextView
            android:id="@+id/txt_exp_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 day"
            android:layout_above="@+id/iv"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/reward_day_color"
            android:fontFamily="@font/montserrat_regular"/>

        <com.scenekey.cus_view.RoundRectCornerImageView
            android:id="@+id/venue_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/team"/>

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward"
            android:textStyle="bold"
            android:layout_below="@+id/civ"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/color_rewardtxt"/>

        <TextView
            android:id="@+id/tv_exp_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ"
            android:layout_toRightOf="@+id/tv_reward"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_light"
            android:layout_marginTop="@dimen/_3sdp"
            android:text=""
            android:textColor="@color/color_rewardtxt"/>

        <!--<LinearLayout-->
            <!--android:id="@+id/ll_txt_reward"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_reward"-->
            <!--android:layout_toLeftOf="@+id/venue_image"-->
            <!--android:gravity="center"-->
            <!--android:orientation="horizontal">-->

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/gift_ico1"
            android:layout_below="@+id/tv_reward"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/tv_reward_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reward"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/iv_gift"
            android:layout_toLeftOf="@+id/venue_image"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="left"
            android:text="2%"
            android:textColor="@color/reward_description" />

        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/addIconForWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_below="@+id/tv_reward_language"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/transparent_border"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingRight="@dimen/_18sdp"
            android:paddingTop="@dimen/_1sdp"
            android:textColor="@color/color_rewardtxt"
            android:paddingBottom="@dimen/_1sdp"
            />

        <TextView
            android:id="@+id/tv_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_toRightOf="@+id/addIconForWallet"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Required "
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/color_rewardtxt"
            android:layout_below="@+id/tv_reward_language"/>


        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/tv_req"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=""
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/color_rewardtxt"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/tv_reward_language"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
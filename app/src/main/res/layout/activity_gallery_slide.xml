<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".activity.trending_summery.GallerySlideActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/top_bar_profile"
        android:padding="@dimen/_12sdp"
        android:layout_margin="5dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_back_icon" />



    <LinearLayout
        android:id="@+id/linear_viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:background="@color/transparent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/image_slider_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@color/transparent">

            </androidx.viewpager.widget.ViewPager>


            <ImageView
                android:id="@+id/iv_left_arrow"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/gallery_left_arrow"
                android:layout_marginLeft="@dimen/_5sdp" />

            <ImageView
                android:id="@+id/iv_rigth_arrow"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/gallery_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
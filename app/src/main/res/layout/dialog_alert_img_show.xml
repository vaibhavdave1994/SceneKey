<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_close_white"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@+id/iv_close"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/offerUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SBH"
                android:layout_toRightOf="@+id/civ"
                android:layout_toEndOf="@+id/civ"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black70p"
                android:fontFamily="@font/montserrat_medium"
                />

            <TextView
                android:id="@+id/tv_reward_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offerUserName"
                android:gravity="center"
                android:fontFamily="@font/montserrat_light"
                android:layout_toRightOf="@+id/iv_gift"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_9sdp"
                android:text="2 %"/>

            <TextView
                android:id="@+id/txt_exp_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 day"
                android:layout_above="@+id/iv"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/montserrat_light"/>


            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_below="@+id/tv_reward_language"
                android:layout_marginTop="@dimen/_10sdp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
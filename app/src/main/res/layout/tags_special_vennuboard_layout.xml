<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRoomView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/uper_view"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="@dimen/_30sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/outerBouder"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:src="@color/white"
            android:layout_marginLeft="@dimen/_5sdp"
            app:civ_border_color="#169686"
            app:civ_border_width="@dimen/_1sdp" />

        <View
            android:id="@+id/view_followed"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_circle_follow"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_5sdp"/>

        <ImageView
            android:id="@+id/iv_tag__special_circulerImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/placeholder_img"
            android:layout_marginStart="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_tag__special_circulerImage"
            android:layout_toRightOf="@+id/iv_tag__special_circulerImage"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp">

            <TextView
                android:id="@+id/tag__special_name"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/_160sdp"
                android:layout_height="@dimen/_16sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:text="Shhubham"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tag__special_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_150sdp"
                android:text="Verma"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/_80sdp"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/follow_border"
            android:textColor="@color/green"
            android:paddingTop="@dimen/_2sdp"
            android:visibility="gone"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/tv_unfollow"
            android:layout_width="@dimen/_80sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="Unfollow"
            android:visibility="gone"
            android:textColor="@color/red_ring"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/unfollow_border"
            />

        <View
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/lowerView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:visibility="gone"
        android:background="@color/m_f_gender_color" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:visibility="gone" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="0.0dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/frank_heavy_reg"
                android:gravity="center"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bg_blue_ring"
                android:padding="@dimen/_3sdp"
                android:scaleType="centerInside"
                android:src="@drawable/image_default_profile" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/img_user"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/img_user"
                android:layout_below="@+id/img_user"
                android:layout_marginLeft="@dimen/_minus8sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:gravity="end"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="2.0dp"
        android:background="@drawable/app_icon" />-->
</LinearLayout>
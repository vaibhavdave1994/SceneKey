<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_white_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.ReportActivity">


    <View
        android:id="@+id/top_status"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/black"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_top_bar">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_f1_back"
            android:layout_width="@dimen/top_bar_profile"
            android:layout_height="@dimen/top_bar_profile"
            android:layout_centerVertical="true"
            android:padding="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_back_icon" />


        <TextView
            android:id="@+id/txt_f1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black2"
            android:textSize="@dimen/_18ssp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_skip">

        <EditText
            android:id="@+id/et_for_enterTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:background="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="top"
            android:maxLength="60"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black90p"
            android:textSize="@dimen/_16ssp"
            android:theme="@style/et_black_cursor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="right">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/report_amy"
            android:textColor="@color/black90p"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_for_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="right"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_shape_primarycolor"
        android:fontFamily="@font/raleway_medium"
        android:text="Submit Report"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scenekey.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/crop_image_menu_rotate_left"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:tint="@color/black"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/crop_image_menu_rotate_left"/>

        <ImageView
            android:id="@+id/crop_image_menu_rotate_right"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:tint="@color/black"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/crop_image_menu_rotate_right"/>

        <TextView
            android:id="@+id/crop_image_menu_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="@string/crop_image_menu_crop"/>
    </LinearLayout>

    </RelativeLayout>
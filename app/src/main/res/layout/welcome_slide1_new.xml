<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"

  >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Find your scene with just two clicks"
        android:textColor="@color/colorPrimaryDark_new"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/montserrat_semibold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Easily find specific things you want to do and get the real time status on those places. "
        android:textColor="@color/reward_day_color"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/montserrat_regular"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/one"/>

</LinearLayout>
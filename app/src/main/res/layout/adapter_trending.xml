<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_white_bg">


    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/boundry">

            <RelativeLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_80sdp"
                    android:layout_toStartOf="@+id/iv_add"
                    android:layout_toLeftOf="@+id/tv_follow"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:text="Shubham"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                   />

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="8dp"

                    android:background="@drawable/follow_border_gray"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Follow"
                    android:textColor="@color/reward_day_color"
                    android:textSize="@dimen/_9sdp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/txt_eventName"
                    android:layout_marginLeft="@dimen/_minus5sdp"
                    android:layout_marginTop="@dimen/_minus2sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_2sdp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/map_ico" />

                        <TextView
                            android:id="@+id/txt_eventAdress"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_light"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="#1f9796"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_toRightOf="@id/txt_eventAdress"
                            android:padding="@dimen/_2sdp"
                            app:srcCompat="@drawable/map_ico" />

                        <TextView
                            android:id="@+id/txt_eventmile"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_toRightOf="@id/txt_eventAdress"
                            android:fontFamily="@font/montserrat_regular"
                            android:maxLines="1"
                            android:textColor="#5E5E5E"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center_vertical|end">


                        <RelativeLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/green_dot"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="@dimen/_3sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/abc_dot" />

                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_light"
                                android:gravity="start|center_vertical"
                                android:textColor="@color/top_bar_text"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/txt_live"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="0dp"
                                android:padding="@dimen/_1sdp"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="Live"
                                android:textColor="#18AF29"
                                android:textSize="@dimen/_11ssp" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_215sdp"
                android:layout_below="@+id/topview"
                android:background="@color/transparent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:background="@color/transparent"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/image_slider_pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@color/transparent">

                    </androidx.viewpager.widget.ViewPager>

                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/frame_keyinbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_30sdp">

                        <LinearLayout
                            android:id="@+id/rl_anim"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_43sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_corner_border"
                            android:orientation="vertical" />

                        <View
                            android:id="@+id/inrect2"
                            android:layout_width="@dimen/_175sdp"
                            android:layout_height="@dimen/_39sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_corner_border_trans"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Key in and share!"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_14sdp" />

                    </FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/image_slider_pager"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/indicator_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/linear_viewPager"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/inactive_like_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:textColor="#4a4a4a"
                        android:textSize="@dimen/_8ssp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/like_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/ll_heart"
                    android:layout_toRightOf="@+id/ll_heart"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="#4f4f4f"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_summery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_summery"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/summary_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/summary"
                            android:textColor="#4a4a4a"
                            android:textSize="@dimen/_7ssp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:orientation="vertical"

                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_note_book"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/board_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/board"
                            android:textColor="#4f4f4f"
                            android:textSize="@dimen/_7ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/status_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/status"
                            android:textColor="#4f4f4f"
                            android:textSize="@dimen/_7ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical"

                        >

                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/comeInUser_lnr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                            </RelativeLayout>

                        </RelativeLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_group"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/people_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/people"
                            android:textColor="#4f4f4f"
                            android:textSize="@dimen/_7ssp" />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/txt_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/card"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_gap2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/card"
        android:visibility="gone" />

</RelativeLayout>

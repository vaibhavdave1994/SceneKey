<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMyProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_up_profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/txt_dimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black90p"
            android:text="f \n  f"
            android:textColor="@color/transparent"
            android:textSize="@dimen/_300sdp" />



        <!--android:background="@drawable/background_circle_white"-->
        <LinearLayout
            android:id="@+id/profileLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Me"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />


            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/cross_primary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_left"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/bg_primary_circle"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_icon_arrow" />


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_p1_profile"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/image_default_profile"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="@dimen/_2sdp" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_right"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/bg_primary_circle"
                    android:padding="@dimen/_5sdp"
                    android:rotationY="180"
                    app:srcCompat="@drawable/ic_icon_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/raleway_regular"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_lnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLay"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_green"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_green_ring" />

                <TextView
                    android:id="@+id/txt_go"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/franklin_gothic_reg"
                    android:gravity="center"
                    android:text="@string/Go"
                    android:textColor="@color/green_ring" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_yellow"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_yellow_ring" />

                <TextView
                    android:id="@+id/txt_caution"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/franklin_gothic_reg"
                    android:gravity="center"
                    android:text="@string/caution"
                    android:textColor="@color/yellow_ring" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_red"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_red_ring_2" />

                <TextView
                    android:id="@+id/txt_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/franklin_gothic_reg"
                    android:gravity="center"
                    android:text="@string/stop"
                    android:textColor="@color/red_ring" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_event_green_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/background_f2_description"
        android:fontFamily="@font/frank_book"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:text="@string/myprofile"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/bg_pop_gray_image"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_p1_profile2"
            android:layout_width="@dimen/profilepic1"
            android:layout_height="@dimen/profilepic1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_white" />

        <!--<ImageView
            android:id="@+id/img_p1_profile"
            android:layout_width="@dimen/profilepic"
            android:layout_height="@dimen/profilepic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_blue_ring2"
            android:padding="@dimen/_4sdp" />-->

        <TextView
            android:id="@+id/txt_my_details"
            style="@style/popUpbottomtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_p1_profile2"
            android:text="@string/DetailMy" />

    </RelativeLayout>


</LinearLayout>
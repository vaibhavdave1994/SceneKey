<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_white_bg"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.Edit_NameFragment">

  <!--  <View
        android:id="@+id/top_status"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/black"
        android:visibility="gone" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_top_bar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_f1_back"
            android:layout_width="@dimen/top_bar_profile"
            android:layout_height="@dimen/top_bar_profile"
            android:layout_centerVertical="true"
            android:padding="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_back_icon" />

        <TextView
            android:id="@+id/txt_f1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="Edit Name"
            android:textColor="@color/black2"
            android:textSize="@dimen/_18ssp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center_vertical"
                android:text="First Name"
                android:padding="1dp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg_boundry">

                <EditText
                    android:id="@+id/et_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@null"
                    android:hint="First Name"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/select_gender_color"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColorHint="@color/gray"
                    android:theme="@style/et_black_cursor" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center_vertical"
                android:text="Last Name"
                android:padding="1dp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg_boundry">

                <EditText
                    android:id="@+id/et_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@null"
                    android:hint="Last Name"
                    android:paddingLeft="@dimen/_8sdp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/select_gender_color"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_12sdp"
                    android:theme="@style/et_black_cursor" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp">

           <!-- <TextView
                android:id="@+id/txt_updateNAme"
                style="@style/txt_event_welcome"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_tag_active"
                android:gravity="center"
                android:text="Update" />
-->

            <TextView
                android:id="@+id/txt_updateNAme"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/white"
                android:background="@drawable/bg_search_tag_active"
                android:text="Update" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
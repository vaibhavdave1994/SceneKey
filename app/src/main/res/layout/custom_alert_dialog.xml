<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/cus_round_all_edgeblack_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/raleway_regular"
        android:background="@drawable/cus_round_top_edge_primary"
        android:gravity="center"
        android:text="@string/Alert"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_pop10_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:minHeight="@dimen/_60sdp"
        android:padding="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_pop10_One"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/Yes"
            android:textColor="@color/blueToastTxt"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_bottom" />

        <TextView
            android:id="@+id/txt_pop10_Two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/No"
            android:textColor="@color/blueToastTxt"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>


</LinearLayout>
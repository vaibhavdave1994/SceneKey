<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CropImage" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_new</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_new</item>
        <item name="colorAccent">@color/colorAccent_new</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>


    <style name="DialogAnimationLeftRight" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="DialogAnimationBottTop" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up2</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom2</item>
    </style>

    <style name="fragment_txt_top">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_no_event">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_event_welcome">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#efefef</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up2</item>
        <item name="android:windowExitAnimation">@anim/slide_down2</item>
    </style>


    <style name="et_black_cursor">
        <item name="colorAccent">@color/colorPrimary_new</item>
        <item name="colorPrimary">@color/colorPrimary_new</item>
        <item name="colorPrimaryDark">@color/colorPrimary_new</item>
    </style>

    <!--New Style-->

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AuthTabBarStyle</item>
    </style>

    <style name="AuthTabBarStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/select_gender_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <declare-styleable name="AspectRatioImageView">
        <attr name="ari_aspect" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
            <enum name="auto" value="2" />
        </attr>
        <attr name="ari_ratio" format="float" />
    </declare-styleable>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">#242424</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark_new</item>
        <item name="android:colorControlHighlight">#c51162</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>
